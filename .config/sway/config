client.focused          #202020 #242424 #ffffff #202020   #202020
client.focused_inactive #0e0e0e #0e0e0e #ffffff #0e0e0e   #0e0e0e
client.unfocused        #0e0e0e #0e0e0e #ffffff #0e0e0e   #0e0e0e
client.urgent           #0e0e0e #ff453a #ffffff #ff453a   #ff453a
client.placeholder      #0e0e0e #0e0e0e #ffffff #0e0e0e   #0e0e0e

client.background       #ffffff

### Window fixes
#
# firefox bug things
for_window [title="\ -\ Sharing\ Indicator$"] floating enable, sticky enable
for_window [app_id="firefox"] adaptive_sync off

for_window [title="Archive Manager"] floating enable
for_window [title="blueman"] floating enable
for_window [title="Bluetooth Devices"] floating enable
for_window [title="Calculator"] floating enable
for_window [title="System Monitor"] floating enable, resize set height 1280px width 960px
for_window [title="Network Connections"] floating enable
for_window [title="Volume Control"] floating enable

for_window [app_id="copyq"] floating enable, sticky enable, resize set height 600px width 550px, move position cursor, move down 330

include @sysconfdir@/sway/config.d/*
