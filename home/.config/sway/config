# Read `man 5 sway` for a complete reference.

### Run critical services
#
# GTK 20 second fix from swaywm wiki
exec --no-startup-id systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec --no-startup-id dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
# GNOME Polkit
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
# Wob for volume control. yes this is critical
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob
# Start notification daemon, letting dbus start mako makes cursor small when hovering over it
exec mako
# wlsunset/night light
exec '[ -x "$(command -v wlsunset)" ] && $XDG_CONFIG_HOME/waybar/sunset.sh "on"'

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Alt key. In case you prefer Alt for $mod
set $alt Alt
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term foot
# Your preferred application launcher
set $menu rofi -theme monterey -show-icons
# Your preferred background image, must use double quotes for wallpaper
set $wallpaper "$HOME/Pictures/Saved Pictures/Wallpapers/Landscapes/The-Desert-8.jpg"
# Your preferred Font name
set $font NotoSans Nerd Font
# Lock command
set $lock swaylock --config $XDG_CONFIG_HOME/swaylock/config -i $wallpaper && loginctl unlock-session self

### Output configuration
#
# Configure background for all monitors
output * bg $wallpaper fill
# VRR causes flickering on my VG27A during normal use but not noticeable while gaming
# Ecountering strange performance issues with 165Hz
output 'ASUSTek COMPUTER INC VG27A M1LMQS120456' {
    mode 2560x1440@143.972Hz
    adaptive_sync off
    subpixel rgb
    # Wait for better fractional-scale-v1 support
    # https://github.com/swaywm/sway/pull/7448
    # https://gitlab.freedesktop.org/wlroots/wlroots/-/merge_requests/3511
    #scale 1.25
}

### Idle configuration
#
exec swayidle -w \
        timeout 300 '$lock; makoctl mode -a away' \
            resume 'makoctl mode -r away' \
        timeout 600 'swaymsg "output * power off"' \
            resume 'swaymsg "output * power on"; makoctl mode -r away' \
        timeout 900 'systemctl suspend' \
            resume 'swaymsg "output * power on"; makoctl mode -r away' \
        before-sleep '$lock; makoctl mode -a away' \
        after-resume 'swaymsg "output * power on"; makoctl mode -r away' \
        lock '$lock; makoctl mode -a away' \
        unlock 'makoctl mode -r away'

